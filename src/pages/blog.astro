---
import PostCard from '$component/PostCard.astro';
import Layout from '$layout/Base.astro'
import { getPosts } from '$lib/posts';

let posts;
try {
    posts = getPosts(await Astro.glob('./post/*.mdx'))
} catch(e) {

}
---

<Layout>
    <h1 id="my-blog-posts">My blog posts</h1>

    <div id="posts">
        {
            posts ? posts.map(post => {
                return <PostCard post={post.frontmatter} url={post.url} />
            }) : <h1 class="fw4">I haven't written any blog posts yet...</h1>
        }
    </div>
</Layout>

<style is:global>
    #my-blog-posts {
        font-size: var(--big-title);
    }

    #posts {
        margin: 1%;
        display: flex;
    }
</style>