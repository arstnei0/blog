---
import Fonts from "./Fonts.astro";
import dayjs from 'dayjs'

const {
    title,
    description,
    keywords,
    author,
    lang,
    article,
} = Astro.props

const url = Astro.url

let date = dayjs(article.pubDate as string, 'YYYY/MM/DD').format('YYYY-MM-DD')
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<meta name="author" content={author}>
<meta name="keywords" content={keywords.join(', ')}>
<meta name="description" content={description}>

{article && (
    <meta property="og:title" content={article.title} />
    <meta property="og:type" content="article" />
    <meta property="og:article:published_time" content={date} />
    <meta property="og:article:author" content={article.author} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={article.image?.src || '/avatar.webp'} />
)}

<title>{
    title ? `${title} ðŸš€ Zihan`
        : 'Zihan'
}</title>

<link rel="icon" href="/avatar.webp">

