---
import BackToTop from "./BackToTop"
import Cursor from "./Cursor"

const { lang } = Astro.props
---

<!DOCTYPE html>
<html lang={lang === "cn" ? "zh-cn" : lang}>
	<head>
		<slot name="head" />
	</head>
	<body>
		<slot />

		<Cursor client:idle client:only="solid-js" />
		<BackToTop client:idle client:only="solid-js" />
	</body>
</html>
