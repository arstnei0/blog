---
import "$style/tags.css"

const { tags } = Astro.props
---

<div id="tags">
	{
		tags?.map((tag: string) => (
			<a href={`/tag/${tag}`} aria-label={`tag ${tag}`}>
				<span class="tag">{tag}</span>
			</a>
		))
	}
</div>

<style is:global>
	#tags {
		margin-top: 10px;
		margin-bottom: 10px;
	}
</style>
