{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@*": ["src/*"],
			"$layout/*": ["src/layouts/*"],
			"@layout/*": ["src/layouts/*"],
			"@component/*": ["src/components/*"],
			"$component/*": ["src/components/*"],
			"@style/*": ["src/style/*"],
			"@util/*": ["src/utils/*"],
			"$util/*": ["src/utils/*"],
			"$style/*": ["src/style/*"]
		}
	}
}
